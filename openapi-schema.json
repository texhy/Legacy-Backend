{
    "openapi": "3.0.3",
    "info": {
        "title": "AI Journal API",
        "version": "1.0.0",
        "description": "Authentication and Onboarding API for AI Journal Mobile App"
    },
    "paths": {
        "/v1/auth/login": {
            "post": {
                "operationId": "auth_login_create",
                "description": "Authenticate user and return JWT tokens with device and onboarding info.",
                "summary": "User Login",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Login successful",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "user": {
                                                    "id": "uuid",
                                                    "name": "John Doe",
                                                    "email": "john@example.com"
                                                },
                                                "accessToken": "eyJ...",
                                                "refreshToken": "eyJ...",
                                                "deviceId": "uuid",
                                                "onboarding": {
                                                    "currentStep": "SECURITY_METHOD",
                                                    "lockMethod": null,
                                                    "lockEnabled": false,
                                                    "biometricEnabled": false,
                                                    "completed": false
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Invalid credentials"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/logout": {
            "post": {
                "operationId": "auth_logout_create",
                "description": "Revoke refresh token and logout user.",
                "summary": "User Logout",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LogoutRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/LogoutRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/LogoutRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Logout successful",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "success": true
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Invalid request"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/password-reset/confirm": {
            "post": {
                "operationId": "auth_password_reset_confirm_create",
                "description": "Reset password using reset token.",
                "summary": "Confirm Password Reset",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetConfirmRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetConfirmRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetConfirmRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Password reset successfully",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "success": true
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Invalid or expired reset token"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/password-reset/request": {
            "post": {
                "operationId": "auth_password_reset_request_create",
                "description": "Request a password reset OTP. Always returns 200 to prevent email enumeration.",
                "summary": "Request Password Reset OTP",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetRequestRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetRequestRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetRequestRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "OTP sent (or cooldown active)",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "sent": true,
                                                "cooldownSeconds": 60
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/password-reset/verify": {
            "post": {
                "operationId": "auth_password_reset_verify_create",
                "description": "Verify OTP and receive reset token.",
                "summary": "Verify Password Reset OTP",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetVerifyRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetVerifyRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/PasswordResetVerifyRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "OTP verified successfully",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "resetToken": "token_string",
                                                "expiresIn": 600
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Invalid or expired OTP"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/refresh": {
            "post": {
                "operationId": "auth_refresh_create",
                "description": "Refresh access token and rotate refresh token.",
                "summary": "Refresh Access Token",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RefreshTokenRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/RefreshTokenRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/RefreshTokenRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Tokens refreshed successfully",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "accessToken": "eyJ...",
                                                "refreshToken": "eyJ..."
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Invalid refresh token"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/auth/signup": {
            "post": {
                "operationId": "auth_signup_create",
                "description": "Create a new user account with device registration and onboarding setup.",
                "summary": "User Signup",
                "tags": [
                    "auth"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SignupRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/SignupRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/SignupRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    },
                    {}
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "User created successfully",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "user": {
                                                    "id": "uuid",
                                                    "name": "John Doe",
                                                    "email": "john@example.com"
                                                },
                                                "accessToken": "eyJ...",
                                                "refreshToken": "eyJ...",
                                                "deviceId": "uuid",
                                                "onboarding": {
                                                    "currentStep": "SECURITY_METHOD",
                                                    "lockMethod": null,
                                                    "lockEnabled": false,
                                                    "biometricEnabled": false,
                                                    "completed": false
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Validation error"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/onboarding/complete": {
            "post": {
                "operationId": "onboarding_complete_create",
                "description": "Mark onboarding as completed.",
                "summary": "Complete Onboarding",
                "tags": [
                    "onboarding"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CompleteOnboardingRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/CompleteOnboardingRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/CompleteOnboardingRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Updated onboarding status",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "currentStep": "DONE",
                                                "lockMethod": "PIN",
                                                "lockEnabled": true,
                                                "biometricEnabled": true,
                                                "completed": true
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Validation error"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/onboarding/security/biometric": {
            "post": {
                "operationId": "onboarding_security_biometric_create",
                "description": "Enable or disable biometric authentication for the device.",
                "summary": "Enable/Disable Biometric",
                "tags": [
                    "onboarding"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SetBiometricRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/SetBiometricRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/SetBiometricRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Updated onboarding status",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "currentStep": "DONE",
                                                "lockMethod": "PIN",
                                                "lockEnabled": true,
                                                "biometricEnabled": true,
                                                "completed": false
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Validation error"
                                }
                            }
                        },
                        "description": ""
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Device not found"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/onboarding/security/method": {
            "post": {
                "operationId": "onboarding_security_method_create",
                "description": "Set the lock method (PIN, PATTERN, or PASSWORD) and move to next step.",
                "summary": "Set Lock Method",
                "tags": [
                    "onboarding"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SetLockMethodRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/SetLockMethodRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/SetLockMethodRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Updated onboarding status",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "currentStep": "CREATE_PASSCODE",
                                                "lockMethod": "PIN",
                                                "lockEnabled": false,
                                                "biometricEnabled": false,
                                                "completed": false
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Validation error"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/onboarding/security/passcode": {
            "post": {
                "operationId": "onboarding_security_passcode_create",
                "description": "Mark passcode as created (server does NOT store the actual passcode).",
                "summary": "Set Passcode Created",
                "tags": [
                    "onboarding"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SetPasscodeRequest"
                            }
                        },
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/SetPasscodeRequest"
                            }
                        },
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/SetPasscodeRequest"
                            }
                        }
                    },
                    "required": true
                },
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Updated onboarding status",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "currentStep": "BIOMETRIC",
                                                "lockMethod": "PIN",
                                                "lockEnabled": true,
                                                "biometricEnabled": false,
                                                "completed": false
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Validation error"
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        },
        "/v1/onboarding/status": {
            "get": {
                "operationId": "onboarding_status_retrieve",
                "description": "Get current onboarding status for the authenticated user.",
                "summary": "Get Onboarding Status",
                "tags": [
                    "onboarding"
                ],
                "security": [
                    {
                        "jwtAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "description": "Onboarding status",
                                    "content": {
                                        "application/json": {
                                            "example": {
                                                "currentStep": "SECURITY_METHOD",
                                                "lockMethod": null,
                                                "lockEnabled": false,
                                                "biometricEnabled": false,
                                                "completed": false
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "description": ""
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "BiometricTypeEnum": {
                "enum": [
                    "FACE_ID",
                    "FINGERPRINT",
                    "UNKNOWN"
                ],
                "type": "string",
                "description": "* `FACE_ID` - Face ID\n* `FINGERPRINT` - Fingerprint\n* `UNKNOWN` - Unknown"
            },
            "CompleteOnboardingRequest": {
                "type": "object",
                "description": "Serializer for completing onboarding.",
                "properties": {
                    "completed": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "completed"
                ]
            },
            "DeviceRequest": {
                "type": "object",
                "description": "Serializer for device information.",
                "properties": {
                    "fingerprint": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 255
                    },
                    "platform": {
                        "$ref": "#/components/schemas/PlatformEnum"
                    },
                    "model": {
                        "type": "string",
                        "nullable": true,
                        "maxLength": 255
                    },
                    "osVersion": {
                        "type": "string",
                        "nullable": true,
                        "maxLength": 50
                    },
                    "appVersion": {
                        "type": "string",
                        "nullable": true,
                        "maxLength": 50
                    }
                },
                "required": [
                    "fingerprint",
                    "platform"
                ]
            },
            "LockMethodEnum": {
                "enum": [
                    "PIN",
                    "PATTERN",
                    "PASSWORD"
                ],
                "type": "string",
                "description": "* `PIN` - PIN\n* `PATTERN` - Pattern\n* `PASSWORD` - Password"
            },
            "LoginRequest": {
                "type": "object",
                "description": "Serializer for user login.",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "minLength": 1
                    },
                    "password": {
                        "type": "string",
                        "writeOnly": true,
                        "minLength": 1
                    },
                    "rememberMe": {
                        "type": "boolean",
                        "default": true
                    },
                    "device": {
                        "$ref": "#/components/schemas/DeviceRequest"
                    }
                },
                "required": [
                    "device",
                    "email",
                    "password"
                ]
            },
            "LogoutRequest": {
                "type": "object",
                "description": "Serializer for logout endpoint.",
                "properties": {
                    "refreshToken": {
                        "type": "string",
                        "minLength": 1
                    },
                    "deviceId": {
                        "type": "string",
                        "format": "uuid"
                    }
                },
                "required": [
                    "deviceId",
                    "refreshToken"
                ]
            },
            "NullEnum": {
                "enum": [
                    null
                ]
            },
            "PasswordResetConfirmRequest": {
                "type": "object",
                "description": "Serializer for password reset confirmation.",
                "properties": {
                    "resetToken": {
                        "type": "string",
                        "minLength": 1
                    },
                    "newPassword": {
                        "type": "string",
                        "writeOnly": true,
                        "minLength": 8
                    }
                },
                "required": [
                    "newPassword",
                    "resetToken"
                ]
            },
            "PasswordResetRequestRequest": {
                "type": "object",
                "description": "Serializer for password reset request.",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "minLength": 1
                    }
                },
                "required": [
                    "email"
                ]
            },
            "PasswordResetVerifyRequest": {
                "type": "object",
                "description": "Serializer for password reset OTP verification.",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "minLength": 1
                    },
                    "otp": {
                        "type": "string",
                        "minLength": 4,
                        "maxLength": 6
                    }
                },
                "required": [
                    "email",
                    "otp"
                ]
            },
            "PlatformEnum": {
                "enum": [
                    "IOS",
                    "ANDROID"
                ],
                "type": "string",
                "description": "* `IOS` - iOS\n* `ANDROID` - Android"
            },
            "RefreshTokenRequest": {
                "type": "object",
                "description": "Serializer for refresh token endpoint.",
                "properties": {
                    "refreshToken": {
                        "type": "string",
                        "minLength": 1
                    },
                    "deviceId": {
                        "type": "string",
                        "format": "uuid"
                    }
                },
                "required": [
                    "deviceId",
                    "refreshToken"
                ]
            },
            "SetBiometricRequest": {
                "type": "object",
                "description": "Serializer for enabling/disabling biometric.",
                "properties": {
                    "enabled": {
                        "type": "boolean"
                    },
                    "deviceId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "biometricType": {
                        "nullable": true,
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/BiometricTypeEnum"
                            },
                            {
                                "$ref": "#/components/schemas/NullEnum"
                            }
                        ]
                    }
                },
                "required": [
                    "deviceId",
                    "enabled"
                ]
            },
            "SetLockMethodRequest": {
                "type": "object",
                "description": "Serializer for setting lock method.",
                "properties": {
                    "lockMethod": {
                        "$ref": "#/components/schemas/LockMethodEnum"
                    }
                },
                "required": [
                    "lockMethod"
                ]
            },
            "SetPasscodeRequest": {
                "type": "object",
